<Window x:Class="StudentInfoSystem.StudentInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="StudentInfo" Height="450" Width="800">
    
        <Grid x:Name="gridPersonalInfo" Margin="10,0,-2,0">
        <Label x:Name="labelFirstName" Margin="10,11,613.6,0" Content="FirstName:" VerticalAlignment="Top" Height="25" Width="130"/>
        <TextBox x:Name="txtFirstName" Margin="182,10,319.6,0" VerticalAlignment="Top" Height="25"/>
        <Label x:Name="labelFacultyNumber" Content="Fac. number:" HorizontalAlignment="Left" Margin="10,51,613.6,0" VerticalAlignment="Top" Height="33" Width="112"/>
        <TextBox x:Name="txtFacultyNumber" HorizontalAlignment="Left" Margin="182,44,319.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" Height="33"/>

        <Button x:Name ="btnLoginStudent"  Content ="Log user" HorizontalAlignment="Left" Margin="550,40,0,0" VerticalAlignment="Top" Click="btnLoginStudent_Click" RenderTransformOrigin="1.353,0.194"/>
        
    </Grid>
    
    
</Window>
